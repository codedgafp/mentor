{{!
    @template local_training/local_trainings

    This template renders training management page.

    Example context (json):
    {
        "addtraininglink" : "link to the training edition form",
        "entityid" : 1,
        "recyclebinlink" : "link to the training entity recycle bin",
        "canmove" : true,
        "moveentities" : [
            {
                "id" : 1,
                "issubentity" : false,
                "name" : "Entity"
            },
            {
                "id" : 3,
                "issubentity" : true,
                "name" : "Sub entity"
            },
        ]
    }
}}


{{# addtraininglink }}
    <div id="trainings-buttons">
        <form action="{{ addtraininglink }}">
            <input type="hidden" name="entityid" value="{{ entityid }}"/>
            <button class="btn btn-primary" id="add-training-button">
                {{# str }} addtraining, local_trainings {{/ str }}
            </button>
        </form>

        {{# recyclebinlink }}
            <div id="recyclebin" class="btn btn-secondary">
                <a href="{{ recyclebinlink }}" target="_blank" title="Corbeille" rel="opener">
                <span>
                    {{# str }} trash, local_trainings {{/ str }}
                </span>
                </a>
            </div>
        {{/recyclebinlink}}

    </div>
{{/addtraininglink }}

<table id="trainings-table" data-entityid="{{entityid}}">
    <thead>
    <tr>
        <th>
            {{# str }} trainingname, local_trainings {{/ str }}
        </th>
        <th>
            {{# str }} status, local_trainings {{/ str }}
        </th>
        <th>
            {{# str }} actions, local_trainings {{/ str }}
        </th>
    </thead>
</table>

{{> local_trainings/duplicate_training_popup }}
{{> local_trainings/move_training_popup }}
{{> local_trainings/create_session_popup }}
