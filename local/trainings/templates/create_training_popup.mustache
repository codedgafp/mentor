{{!
    @template local_training/create_training_popup

    This template renders training creation form.

    Example context (json):
    {
        "subentities" : [
            {
                "id" : 1,
                "issubentity" : false,
                "name" : "Entity"
            },
            {
                "id" : 3,
                "issubentity" : true,
                "name" : "Sub entity"
            },
        ]
    }
}}

<div id="create-training-popup" class="text-center">
    <p>{{# str }} addtrainingcontent, local_trainings {{/ str }}</p>
    <div id="create-training-popup-form">
        <label for="entity">{{# str }} dedicateddtargetdsubentity, local_trainings {{/ str }}</label>
        <select id="entity" name="entity" class="custom-select">
            {{#subentities}}
                <option value="{{id}}">{{# issubentity }}| {{/issubentity}}{{name}}</option>
            {{/subentities}}
        </select>
    </div>
</div>
