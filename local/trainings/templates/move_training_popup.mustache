{{!
    @template local_training/move_training_popup

    This template renders the move training popup.

    Example context (json):
    {
        "canmove" : true,
        "moveentities" : [
            {
                "id" : 1,
                "issubentity" : false,
                "name" : "Entity"
            },
            {
                "id" : 3,
                "issubentity" : true,
                "name" : "Sub entity"
            },
        ]
    }
}}

<div id="move-training-popup" class="text-center">
    <div id="movetrainingmessage">{{# str }} movetrainingmessage, local_trainings {{/ str }}</div>

    {{#canmove}}
        <div><label for="subentity">{{# str }} destination, local_trainings {{/ str }}</label></div>
        <div>
            <select id="entity" class="custom-select" name="entity">
                {{#moveentities}}
                    <option value="{{id}}">{{# issubentity }}| {{/issubentity}}{{name}}</option>
                {{/moveentities}}
            </select>
        </div>
    {{/canmove}}

</div>
