{{!
    @template local_session/move_session_popup

    This template renders content of the move session popup.

    Example context (json):
    {
        "moveentities" : [
            {
                "id" : 1,
                "issubentity" : false,
                "name" : "Entity"
            },
            {
                "id" : 3,
                "issubentity" : true,
                "name" : "Sub entity"
            },
        ]
    }

}}

<div id="move-session-popup" class="text-center">
    <div id="movesessionmessage">{{# str }} movesessionmessage, local_session {{/ str }}</div>
    <br/>
    <div><label for="subentity">{{# str }} destination, local_session {{/ str }}</label></div>
    <div>
        <select id="entity" class="custom-select" name="entity">
            {{#moveentities}}
                <option value="{{id}}">{{# issubentity }}| {{/issubentity}}{{name}}</option>
            {{/moveentities}}
        </select>
    </div>
</div>
