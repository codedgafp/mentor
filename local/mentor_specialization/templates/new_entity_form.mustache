{{!
    @template local_mentor_specialization/new_entity_form

    This template renders the extra html of the entity creation form.

    Example context (json):
    {
        "regions" : [
            {
                "id" : 1,
                "name" : "Region 1"
            },
            {
                "id" : 2,
                "name" : "Region 2"
            }
        ]
    }
}}

<div>
    <label for="entities-form-regionid">{{# str }} regionsopt, local_mentor_specialization {{/ str }}</label>
    <select id="entities-form-regionid" name="regions[]" class="custom-select" multiple="multiple">
        {{# regions }}
            <option value="{{ id }}"> {{ name }}</option>
        {{/ regions }}
    </select>
</div>
