<div id="header-library">
    <p id="introduction-first-part">{{# str}}libraryheaderfirsttext, local_library{{/str}}</p>
    <p id="introduction-last-part" class="truncate">{{# str}}libraryheaderlasttext, local_library{{/str}}</p>
    <div id="gradientmask"></div>
    <button class="show-more">{{# str }} readmore, local_catalog {{/str}}</button>
    <button class="show-less hidden">{{# str }} viewless, local_catalog {{/str}}</button>
</div>
<div id="local-library">
    {{#trainingscount}}
        <div class="library-search">
            <input type="text" name="search" id="search" title="{{# str}}search_placeholder, local_mentor_specialization{{/str}}"
                   placeholder="{{# str}}search_placeholder, local_mentor_specialization{{/str}}">
            <button id="search-button" class="btn btn-primary" aria-label="Rechercher une formation"><i class="icon fa fa-search"></i></button>
        </div>

        <div id="library-filters" class="library-filters">

            <div class="mentor-accordion" id="collections-filter">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">
                            <button class="btn btn-link" data-toggle="collapse" aria-expanded="true">Collections</button>
                        </h2>
                        <p class="header-right">-</p>
                    </div>
                    <div class="collapse show" data-collapse-mobile-size="767" data-collapse-mobile-action="close">
                        <div class="card-body">
                            <ul id="collections"></ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mentor-accordion" id="entities-filter">
                <div class="card">
                    <div class="card-header">
                        <h2 class="mb-0">
                            <button class="btn btn-link" data-toggle="collapse" aria-expanded="true">Propos√©e par</button>
                        </h2>
                        <p class="header-right">-</p>
                    </div>
                    <div class="collapse show" data-collapse-mobile-size="767" data-collapse-mobile-action="close">
                        <div class="card-body">
                            <ul id="entities"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="library-grid">
            <p id="library-found"><span id="library-count" aria-live="polite"></span></p>
            <div class="" id="library-tile">
                {{> local_library/training-tile }}
            </div>
        </div>
    {{/trainingscount}}

    {{^trainingscount}}
        <p class="no-library-message">{{# str}}no_trainings, local_library{{/str}}</p>
    {{/trainingscount}}
</div>

<!-- CATALOG DATA -->
<p id="library-trainings">{{available_trainings}}</p>
<p id="library-dictionnary">{{trainings_dictionnary}}</p>
