{{!
    @template local_user/local_user

    This template renders the user management page.

    Example context (json):
    {
        "manageurl" : "link the the role management of the current entity"
    }
}}

<div id="manageroles">
    <a href="{{ manageurl }}" target="__blank" class="btn btn-secondary">
        {{# str }} manageroles, local_user {{/ str }}
    </a>
</div>

{{> local_user/filters }}

<table id="user-admin-table">
    <thead>
    <tr>
        <th>{{# str }} lastname, moodle {{/ str }}</th>
        <th>{{# str }} firstname, moodle {{/ str }}</th>
        <th>{{# str }} email, moodle {{/ str }}</th>
        <th>{{# str }} lastconnection, local_user {{/ str }}</th>
        <th>{{# str }} actions, moodle {{/ str }}</th>
    </tr>
    </thead>
</table>