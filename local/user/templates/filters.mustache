{{!
    @template local_user/filters

    This template renders filters on the user management page.
}}

<div id="user-buttons-filter">
    <div id="filter-title">
        <i class="fa fa-filter" aria-hidden="true"></i>{{# str }} sortby, local_user {{/ str }}
    </div>
    <div id="filter-actions">
        <div id="user-status-filter">
            <label for="status" class="fr-text--sm">{{# str }} status, local_user {{/ str }}</label>
            <select name="status" id="status">
                <option value="all"></option>
                <option value="active">Comptes actifs</option>
                <option value="suspended">Comptes suspendus</option>
            </select>
        </div>

        <div class="filters-button">
            <button id="filter-apply" class="btn btn-primary"><i class="fa fa-filter" aria-hidden="true"></i>{{# str }} applyfilters, local_user {{/ str
            }}</button>
            <button id="filter-reset" class="btn btn-link">{{# str }} resetfilters, local_user {{/ str }}</button>
        </div>
    </div>


</div>