{{!
    @template local_user/roles

    This template renders the table of user roles.

    Example context (json):
    {
        "roles" : [
            {
                "profilelink" : "link to the user profile page",
                "firstname" : "Firstname",
                "lastname" : "Lastname,
                "email" : "email@email.com"
                "mainentity" : "DGAFP",
                "rolename" : "Admin",
                "entityname" : "DGAFP",
                "timemodified" : "18/03/22",
                "lastaccess" : "15/03/22"
            }
        ]
    }
}}

<table id="roles-table">
    <thead>
    <tr>
        <th>Prénom / Nom</th>
        <th>Adresse de courriel</th>
        <th>Entité de rattachement</th>
        <th>Rôle</th>
        <th>Entité du rôle</th>
        <th>Date d'attribution du rôle</th>
        <th>Dernier accès</th>
    </tr>
    </thead>
    <tbody>
    {{#roles}}
        <tr>
            <td><a href="{{{ profilelink }}}" title="Profil">{{ firstname }} {{ lastname }}</a></td>
            <td>{{ email }}</td>
            <td>{{ mainentity }}</td>
            <td>{{ rolename }}</td>
            <td>{{ entityname }}</td>
            <td>{{{ timemodified }}}</td>
            <td>{{{ lastaccess }}}</td>
        </tr>
    {{/roles}}
    </tbody>
</table>