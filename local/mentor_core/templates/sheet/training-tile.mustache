{{!
    @template local_mentor_core/sheet/training-tile

    This template renders a list of trainings.

    Example context (json):
    {
        "trainings": [{
                "id" : 1
                "name" : "training 1",
                "courseurl" : "http://mentor.gouv.fr/course/view.php?id=xxx",
                "thumbnail" : true,
                "entityname" : "Entity"
            }
        ]
    }
}}

{{#trainings}}
    <button data-training-id="{{id}}" class="training-tile" onclick="window.location.href='{{{ courseurl }}}'" title="{{name}}">
        <div class="open-training-sheet">
            <div class="training-tile-thumbnail">
                <div class="training-tile-thumbnail-size">
                    {{#thumbnail}}
                        <div class="training-tile-thumbnail-resize" aria-label="{{# str}}thumbnail, local_mentor_core{{/str}}" style="background-image: url('{{thumbnail}}')"></div>
                    {{/thumbnail}}
                </div>
            </div>
            <div class="training-tile-information">
                {{#name}}
                    <div class="training-name">{{name}}</div>
                {{/name}}
                {{#entityname}}
                    <div class="training-trainer">
                        {{# str}}trainings_trainer, local_mentor_core{{/str}} <span class="training-creator">{{entityname}}</span>
                    </div>
                {{/entityname}}
            </div>
        </div>
    </button>
{{/trainings}}
