{{!
    @template local_mentor_core/new_entity_form

    This template renders a sub entity creation form.

    Example context (json):
    {
        "extrahtml" : "<div>extra HTML to display</div>"
    }
}}

<div id="sub-entities-form-template">
    <form id="sub-entities-form">
        <div>
            <label for="entities-form-parent-entity">{{# str }} space, local_mentor_core {{/ str }} *</label>
            <select id="entities-form-parent-entity" name="entityid"></select>
        </div>
        <div>
            <label for="sub-entities-form-name">{{# str }} newsubspacename, local_mentor_core {{/ str }} *</label>
            <input type="text" id="sub-entities-form-name" name="name">
        </div>
        {{{ extrahtml }}}
    </form>
    <p class="entities-form-warning entities-form-warning-none">{{# str }} requiredfields, local_mentor_core {{/ str }}</p>
    <p class="entities-form-maxlength entities-form-warning-none">{{# str }} entitynamelimit, local_mentor_core, 70 {{/ str }}</p>
</div>
