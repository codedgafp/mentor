{{!
    @template tool_adhoctasksqueue/adhoctaskslist

    Template for displaying ad hoc tasks queue

    Context variables required for this template:

    Example context (json):
    {
      "status": 200,
      "message": "Ad hoc tasks list",
      "tasks": [
        {
          "id": "11",
          "component": "",
          "classname": "\\core_course\\task\\course_delete_modules",
          "nextruntime": "1663694763",
          "faildelay": "0",
          "userid": "3",
          "userfullname": "PROF 1 PROF 1",
          "blocking": "0"
        },
        {
        ...
        }
      ]
    }

}}

{{! Title and loading spinner. }}
<div class="d-flex align-items-center">
    <h1>{{#str}}pluginname, tool_adhoctasksqueue{{/str}}</h1>
    <div class="text-left flex-grow pl-3">
        <div class="spinner-border text-success" role="status" id="loading-spinner"></div>
    </div>
</div>

{{! Table of ad hoc tasks. }}
<table id="taskslist" class="display w-100 text-center">
    <thead>
    <tr>
        <th>id</th>
        <th>component</th>
        <th>classname</th>
        <th>nextruntime</th>
        <th>faildelay</th>
        <th>customdata</th>
        <th>userid</th>
        <th>blocking</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>