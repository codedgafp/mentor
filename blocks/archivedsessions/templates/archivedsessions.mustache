<div class="block-archivedsessions">
    <div class="sessions-grid">
        {{#sessionscount}}
            <div id="sessions-tile" data-sessionscount="{{ sessionscount }}">
                {{#sessions}}
                    {{> block_archivedsessions/session-tile }}
                {{/sessions}}
            </div>
        {{/sessionscount}}
        {{^sessionscount}}
            <div class="no-sessions-pix">{{# pix }} empty-state, block_archivedsessions{{/ pix }}</div>
            <div class="no-sessions-message">{{# str}}no_sessions, block_archivedsessions{{/str}}</div>
            <div class="no-sessions-enroltosession">
                <a href="{{ catalogurl }}">{{# str}}no_sessions_enroltosession, block_archivedsessions{{/str}}</a>
            </div>
        {{/sessionscount}}
    </div>
    {{#sessionscount}}
        <div class="sessions-nav">
            <nav aria-label="Navigation">
                <ul id="archivedsessions-pagination" class="mentor-pagination"></ul>
            </nav>
        </div>
    {{/sessionscount}}
</div>