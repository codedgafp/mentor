<a class="block-session-tile" style="display: none;" href="{{{ courseurl }}}" tabindex="0" title="{{fullname}}">
    <div class="session-tile-thumbnail">
        <div class="session-tile-thumbnail-size">
            {{#thumbnail}}
                <div class="session-tile-thumbnail-resize" aria-hidden="true" data-thumbnail-url="{{thumbnail}}"></div>
            {{/thumbnail}}
        </div>
        {{^ isparticipant }}
            {{#istrainer}}
                <div class="session-tile-trainer">
                    {{# str}}trainer, block_archivedsessions{{/str}}
                </div>
            {{/istrainer}}

            {{#istutor}}
                <div class="session-tile-trainer">
                    {{# str}}tutor, block_archivedsessions{{/str}}
                </div>
            {{/istutor}}
        {{/isparticipant}}
    </div>
    <div class="information {{ status }}">
        <h3 class="name{{#isopenedregistration}} is-opened-registration{{/isopenedregistration}}{{#completed}} completed{{/completed}}">
            {{#fullname}}
                {{fullname}}
            {{/fullname}}
            {{^fullname}}
                {{trainingname}}
            {{/fullname}}
        </h3>
        <p class="status {{#completed}}completed{{/completed}}">
            {{#isinpreparation}}
                {{# pix }} calendar, block_archivedsessions{{/ pix }} {{# str }} comingsoon, block_archivedsessions, <span class="date">{{sessionstartdate}}</span>{{/ str }}
            {{/isinpreparation}}
            {{#isopenedregistration}}
                {{# pix }} calendar, block_archivedsessions{{/ pix }} {{# str }} comingsoon, block_archivedsessions, <span class="date">{{sessionstartdate}}</span>{{/ str }}
            {{/isopenedregistration}}
            {{#isreported}}
                {{# pix }} calendar, block_archivedsessions{{/ pix }} {{# str }} comingsoon, block_archivedsessions, {{/ str }}
            {{/isreported}}
            {{#isinprogress}}
                {{# showProgress}}
                    <span class="progression">{{# str }} progression,
                    block_archivedsessions, {{progress}} {{/ str }}
                    </span>
                {{/ showProgress}}
            {{/isinprogress}}
            {{#completed}}
                {{# pix }} check-circle, block_archivedsessions{{/ pix }} {{# str }}
                completed, block_archivedsessions {{/ str }} {{#sessionenddate}}{{# str }} on, block_archivedsessions, {{sessionenddate}} {{/ str }}{{/sessionenddate}}
            {{/completed}}
            {{#isarchived}}
                {{# pix }} check-circle, block_archivedsessions{{/ pix }} {{# str }}
                completed, block_archivedsessions {{/ str }} {{#sessionenddate}}{{# str }} on, block_archivedsessions, {{sessionenddate}} {{/ str }}{{/sessionenddate}}
            {{/isarchived}}

        </p>
        <div class="session-more-information" data-training-id="{{trainingid}}" data-session-id="{{id}}">
            {{#str}} moreinfotile, block_archivedsessions {{/str}} <i class="fr-fi-arrow-right-line" aria-hidden="true"></i>
        </div>

        <p class="archived-tag">Archiv√©e</p>

        {{#isinprogress}}
            {{# showProgress}}
                <div class="progression-content">
                    <div class="progression-bar" style="width: {{progress}}%;"></div>
                </div>
            {{/ showProgress}}
        {{/isinprogress}}
    </div>
</a>
